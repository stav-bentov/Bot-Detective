{
    "manifest_version": 3,

    "name": "Twitter Bot Detective",
    "description":"Combat presence of Twitter bot accounts! In compliance with privacy standards ,we collect only publicly accessible data and don't retrieve any private information, such as passwords",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "tabs",
        "webNavigation",
        "https://34.165.68.249/*"
    ],
    "host_permissions": [
        "http://127.0.0.1/*"
    ],
    "background": {
        "service_worker": "urlChanged.js"
    },
    "content_scripts": [
        {
            "js": ["sharedScript.js", "showBotPrec.js", "searchAndCalcUsers.js"],
            "matches": ["https://twitter.com/*"]
        }
    ],
    "icons": {
        "16": "/img/icon.png",
        "48": "/img/icon.png",
        "128": "/img/ex_img128.png"
    }
}